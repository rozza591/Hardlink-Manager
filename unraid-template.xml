<?xml version="1.0"?>
<Container version="2">
  <Name>Hardlink-Manager</Name>
  <Repository>ghcr.io/rozza591/hardlink-manager:latest</Repository>
  <Registry>https://github.com/rozza591/Hardlink-Manager/pkgs/container/hardlink-manager</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/rozza591/Hardlink-Manager/issues</Support>
  <Project>https://github.com/rozza591/Hardlink-Manager</Project>
  <Overview>
    Efficiently manage hardlinks and find duplicates across multiple paths. 
    Optimized for large media libraries and HDD-friendly sequential scanning.
  </Overview>
  <Category>Tools:Utilities</Category>
  <WebUI>http://[IP]:[PORT:5000]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/rozza591/Hardlink-Manager/main/static/favicon.ico</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Description/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5000</HostPort>
        <ContainerPort>5000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/hardlink-manager</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/data</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>/config</Value>
      <Name>CONFIG_DIR</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>INFO</Value>
      <Name>LOG_LEVEL</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Web Port" Target="5000" Default="5000" Mode="tcp" Description="The port for the Web UI" Type="Port" Display="always" Required="true" Mask="false">5000</Config>
  <Config Name="App Data" Target="/config" Default="/mnt/user/appdata/hardlink-manager" Mode="rw" Description="Persistent configuration and scan history" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/hardlink-manager</Config>
  <Config Name="Data Dir" Target="/data" Default="/mnt/user/data" Mode="rw" Description="Default data directory to scan" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/data</Config>
</Container>
